public class Client {

	public static void main(String[] args) throws IOException {
		
			BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		
			System.out.println("Enter the name of bank from where you want to take loan amount");
			
		String bankname=br.readLine();
		
		System.out.println();
		
		System.out.println("Enter the type of loan eg home loan or business loan or education loan");
		
		String loantype = br.readLine();
		
		AbstractFactory bank = FactoryCreator.getFactoryType(bankname);
		
		AbstractFactory loantype = FactoryCreator.getFactoryType(loantype);
	}
